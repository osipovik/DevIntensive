<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_info_height"
    android:background="@color/grey"
    android:orientation="horizontal"
    android:gravity="center"
    android:fitsSystemWindows="true"
    app:layout_behavior=".ui.behaviors.UserInfoBehavior"
    app:behavior_min_height="56dp">

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_rating_tv"
            style="@style/text.title"
            android:text="5"/>

        <TextView
            style="@style/text"
            android:text="Рейтинг"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/height_line"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_code_lines_tv"
            style="@style/text.title"
            android:text="2500"/>

        <TextView
            style="@style/text"
            android:text="Строчек кода"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/height_line"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_projects_tv"
            style="@style/text.title"
            android:text="5"/>

        <TextView
            style="@style/text"
            android:text="Проектов"/>
    </LinearLayout>
</LinearLayout>